{
  "name": "firebase-helper",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "firebase-helper/src",
  "prefix": "spin-the-team",
  "tags": [],
  "projectType": "library",
  "targets": {
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "firebase-helper/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "firebase-helper/**/*.ts",
          "firebase-helper/**/*.html"
        ]
      }
    },
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "main": "libs/firebase-helper/src/index.ts",
        "outputPath": "dist/libs/firebase-helper",
        "outputFileName": "main.js",
        "tsConfig": "libs/firebase-helper/tsconfig.lib.json",
        "assets": [
          {
            "glob": "libs/firebase-helper/README.md",
            "input": ".",
            "output": "."
          }
        ],
        "platform": "node"
      },
      "configurations": {
        "development": {
          "minify": false
        },
        "production": {
          "minify": true
        }
      }
    }
  }
}
