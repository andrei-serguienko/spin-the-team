{
  "name": "firebase-helper",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "firebase-helper/src",
  "prefix": "spin-the-team",
  "tags": [],
  "projectType": "library",
  "targets": {
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "firebase-helper/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "firebase-helper/**/*.ts",
          "firebase-helper/**/*.html"
        ]
      }
    }
  }
}
